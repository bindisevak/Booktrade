<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">



   <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:background="@drawable/ic_menu_camera"
        android:id="@+id/book_image"
       android:layout_gravity="center"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dmn_5dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/book_name"/>
            //android:layout_toRightOf="@+id/book_image"

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/book_price"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="1"
             android:id="@+id/book_category"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="1"
             android:id="@+id/book_edition"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="1"
             android:id="@+id/book_pickUpShip"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/book_id"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/book_author"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/book_userId"
             android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>