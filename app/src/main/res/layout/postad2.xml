        <TableLayout android:id="@+id/bookDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_weight="1"
            android:layout_gravity="right">
            <TableRow
                android:id="@+id/table_author"
                android:layout_width="fill_parent"
                android:weightSum="8"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:text="Author:"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/book_author1"
                    android:layout_weight="6"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:minLines="1"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"/>

            </TableRow>

            <TableRow
                android:id="@+id/table_year"
                android:layout_width="wrap_content"
                android:weightSum="8"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:text="Title:"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/book_title"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:minLines="1"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"/>

            </TableRow>

            <TableRow
                android:id="@+id/table_isbn"
                android:layout_width="fill_parent"
                android:weightSum="8"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="15dp"
                    android:text="Category"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/book_category"
                    android:layout_weight="6"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:minLines="1"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"/>

            </TableRow>

