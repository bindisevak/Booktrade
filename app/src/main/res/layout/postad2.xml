    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

        <TextView android:id="@+id/edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter edition"
            android:textSize="18dip"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText android:id="@+id/input_edition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    />
            </android.support.design.widget.TextInputLayout>


            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView android:id="@+id/credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Credits"
                android:textSize="18dip"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText android:id="@+id/input_credits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/rg">
            <RadioButton android:id="@+id/pickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:textSize="18dip"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"/>
            <RadioButton android:id="@+id/delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:textSize="18dip"
                android:textStyle="bold"
                android:layout_weight="1"

                android:layout_gravity="center"/>
        </RadioGroup>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hidden"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Pickup Details"
                android:textStyle="bold"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:layout_gravity="center"
                />



            <EditText android:id="@+id/input_add1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="8dp"
                android:hint="Address Line 1"
                android:textSize="15dp"
                android:gravity="center"/>

            <EditText android:id="@+id/input_add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address Line 2"
                android:textSize="15dp"
                android:gravity="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <EditText android:id="@+id/input_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="City"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="1"/>

                <EditText android:id="@+id/input_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="State"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="1"/>

                <EditText android:id="@+id/input_zip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Zip"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="From:"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />

                <Spinner
                android:id="@+id/fromDaySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/Days"
                android:layout_weight="1"/>

                <TextView
                    android:id="@+id/to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="To:"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />

                <Spinner
                    android:id="@+id/toDaySpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/Days"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/fromTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="From:"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />

                <Spinner
                    android:id="@+id/fromTimeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/Time"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/toTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="To:"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />

                <Spinner
                    android:id="@+id/toTimeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/Time"
                    android:layout_weight="1"/>



            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notes:"
                    android:textStyle="bold"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />


                <EditText android:id="@+id/input_notes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textSize="15dp"
                    android:layout_weight="2"
                    />





            </LinearLayout>




        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_postAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Post Ad"/>


    </LinearLayout>


